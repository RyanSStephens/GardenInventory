{
  "name": "garden-inventory",
  "version": "1.0.0",
  "description": "A comprehensive garden inventory management system for tracking plants, supplies, and harvests",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node data/seeds.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "backup": "node utils/backup.js",
    "docs": "node scripts/generate-docs.js",
    "docker:build": "docker build -t garden-inventory .",
    "docker:run": "docker run -p 3000:3000 garden-inventory",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "garden",
    "inventory",
    "agriculture",
    "plants",
    "harvest",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.8.1",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.7.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.8.0",
    "node-cron": "^3.0.2",
    "archiver": "^5.3.1"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.20",
    "eslint": "^8.30.0",
    "prettier": "^2.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!data/seeds.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
} 